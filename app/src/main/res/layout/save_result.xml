<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/result_url_text"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Source Url"
        app:layout_constraintBottom_toBottomOf="@+id/result_summary_text"
        app:layout_constraintStart_toEndOf="@+id/result_summary_text"
        app:layout_constraintTop_toTopOf="@+id/result_summary_text"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="48dp"
        android:layout_height="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/result_summary_text"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Result Summary"
        app:layout_constraintBottom_toBottomOf="@+id/result_image"
        app:layout_constraintStart_toEndOf="@+id/result_image"
        app:layout_constraintTop_toTopOf="@+id/result_image" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_url_text" />
</androidx.constraintlayout.widget.ConstraintLayout>